{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true
  }
}
